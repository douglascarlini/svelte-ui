{
    "compilerOptions": {
        "target": "es2017",
        "module": "es2020",
        "strict": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist/esm",
        "baseUrl": ".",
        "paths": {
            "src/*": [
                "src/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "index.d.ts"
    ],
    "exclude": [
        "node_modules/*",
        "__sapper__/*",
        "public/*"
    ]
}